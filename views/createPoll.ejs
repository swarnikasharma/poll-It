  <script type="text/javascript">
  $(document).ready(function(){
    $("#back").click(function(){
      $.ajax({
        type: 'GET',
        url: '/home',
        success: function(data){
          window.location.pathname="/home"
        }
      });
      return false;
    });
    $("#logout").click(function(){
      $.ajax({
        type: 'GET',
        url: '/login',
        success: function(data){
          window.location.pathname="/login"
        }
      });
      return false;
    });

  $("#create_Poll").click(function(){

    console.log("here");
    var username=localStorage.getItem("login_name");
    var pollname=$('#pollname').val();
    var que = $('#question').val();
    var op1,op2,op3,op4;

    op1 = $('#opt1').val();
    op2 = $('#opt2').val();
    op3 = $('#opt3').val();
    op4 = $('#opt4').val();


    console.log("inside login"+username);

    var obj = {pollname:pollname,username:username,ques1:que,option1:op1,option2:op2,option3:op3,option4:op4};

    $.ajax({
      type: 'POST',
      url: '/poll_user_database',
      data: obj,
      success: function(data){
        //do something with the data via front-end framework
        //location.reload();

        console.log("saved ");

         window.location.pathname="/home";
      }
    });
  });
});
