<body>

        <form>
          <div class="row">
            <div class="col-sm-1">
            <Button id="back" class="btn btn-sm"> Back </Button>
            </div>
            <div class="col-sm-10"></div>
            <div class="col-sm-1">
            <Button id="logout"  class="btn btn-sm"> Logout </Button>
            </div>
          </div>


          <div="container">
                <div class="row">
                  <div class="col-md-3"></div>
                  <div class="col-md-6">
                  <label>Enter your poll name</label>
                  <input type="text" class="form-control" id="pollname" placeholder="pollname" name="pollname" required>

                  <label>Enter your poll question</label>
                  <input type="text" class="form-control" id="question" placeholder="Enter question" name="question" required>


                  <label>Option1</label>
                  <input type="text" class="form-control" id="opt1" placeholder="option1" name="opt1" required>

                  <label>Option2</label>
                  <input type="text" class="form-control" id="opt2" placeholder="option2" name="opt2" required>

                  <label>Option3</label>
                  <input type="text" class="form-control" id="opt3" placeholder="option3" name="opt3" required>

                  <label>Option4</label>
                  <input type="text" class="form-control" id="opt4" placeholder="option4" name="opt4" required>
                  <button type="button" id="create_Poll" class="btn btn-sm">Create</button>

                </div>
                <div class="col-md-3"></div>

                <!-- <div class="form-group">
                  <input type="text" class="form-control"  id="otp" placeholder="Enter OTP" name="otp" required>
                </div> -->

